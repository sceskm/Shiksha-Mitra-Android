                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:text="Capture" />
                </LinearLayout>

                <!-- Remarks -->
                <TextView
                    style="@style/SubHeadingTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/remarks_if_any" />

                <EditText style="@style/AppEditTextStyle" />

                <Button
                    android:id="@+id/btn_submit_final_session"
                    style="@style/AppButtonStyle2"
