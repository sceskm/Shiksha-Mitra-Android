<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.AgencyHome">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|enterAlways" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="240dp"
                    android:layout_height="180dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="16dp"
                    android:contentDescription="Logo"
                    android:src="@drawable/icon_login_screen" />

                <!-- Welcome Text -->
                <TextView
                    android:id="@+id/txt_user_name"
                    style="@style/HeadingTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"/>

                <!-- Project Info -->
                <TextView
                    android:id="@+id/txt_app_version"
                    style="@style/SubHeadingTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"/>

                <!-- Start Date -->
                <TextView
                    android:id="@+id/txt_current_date"
                    style="@style/SubHeadingTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="italic" />

                <!-- Data Entry Button -->
                <Button
                    android:id="@+id/btn_venue_details"
                    style="@style/AppButtonStyle"
                    android:layout_marginTop="16dp"
                    android:text="SM Training Venue Details" />

                <Button
                    android:id="@+id/btn_registration_sm"
                    style="@style/AppButtonStyle"
                    android:layout_marginTop="16dp"
                    android:text="SM Registration" />

                <Button
                    android:id="@+id/btn_sm_training_session"
                    style="@style/AppButtonStyle"
                    android:layout_marginTop="16dp"
                    android:text="SM Training" />

                <Button
                    android:id="@+id/btn_final_session"
                    style="@style/AppButtonStyle"
                    android:layout_marginTop="16dp"
                    android:text="Final Session"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/btn_retail_outreach"
                    style="@style/AppButtonStyle"
                    android:layout_marginTop="16dp"
                    android:text="Retailers Details"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/btn_sync_data"
                    style="@style/AppButtonStyle"
                    android:layout_marginTop="16dp"
                    android:text="Synchronisation"
                    android:visibility="gone"/>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</layout>